generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model Vote {
  id      Int     @id @default(autoincrement())
  batch   Batch   @relation(fields: [batchId], references: [origin])
  feature String
  address String
  vote    Boolean
  batchId String
}

model BatchWinners {
  id             Int    @id @default(autoincrement())
  batch          Batch  @relation(fields: [batchwinnersId], references: [origin])
  address        String
  batchwinnersId String
}

model Batch {
  origin       String         @id
  pruners      Int
  threshold    Int
  votes        Vote[]
  batchWinners BatchWinners[]
}
